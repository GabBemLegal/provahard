import os
import shutil
import webbrowser

# Caminho automático relativo ao local onde o script está
BASE_DIR = os.path.dirname(os.path.abspath(__file__))
source_folder = os.path.join(BASE_DIR, "src", "html")

# Destino no XAMPP
dest_folder = r"C:\xampp\htdocs\sys_rast_log"

print(f"Lendo a pasta: {source_folder}")

# Apaga destino se existir
if os.path.exists(dest_folder):
    shutil.rmtree(dest_folder)

# Copia o site
shutil.copytree(source_folder, dest_folder)

# Abre a página inicial
webbrowser.open("http://localhost/sys_rast_log/index.html")

print("Site copiado e iniciado com sucesso!")